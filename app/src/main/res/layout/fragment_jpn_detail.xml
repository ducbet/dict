<?xml version="1.0" encoding="utf-8"?>
<layout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:bind="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    >

    <data>

        <variable
            name="viewModel"
            type="com.tmd.dictionary.screen.fragment.jpndetail.JpnDetailViewModel"
            />

        <import type="com.tmd.dictionary.util.LayoutManagers"/>
    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/colorPrimary"
        android:orientation="vertical"
        android:padding="@dimen/dp_5"
        tools:context=".screen.fragment.JpnWordDetail.JpnWordDetailActivity"
        >

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/dp_5"
            android:layout_marginLeft="@dimen/dp_15"
            android:layout_marginStart="@dimen/dp_15"
            android:text="@{viewModel.word.origin}"
            android:textColor="@android:color/white"
            android:textSize="@dimen/sp_25"
            />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/dp_5"
            android:text="@{viewModel.word.kana}"
            android:textColor="@color/color_brown_100"
            android:textSize="@dimen/sp_15"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/dp_5"
            android:text="@{viewModel.word.definition}"
            android:textColor="@color/color_brown_100"
            android:textSize="@dimen/sp_15"/>

        <android.support.v7.widget.RecyclerView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            bind:adapter="@{viewModel.jpnDetailKanjisAdapter}"
            bind:layoutManager="@{LayoutManagers.linear()}"/>

    </LinearLayout>
</layout>
