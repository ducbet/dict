<?xml version="1.0" encoding="utf-8"?>
<layout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    >

    <data>

        <variable
            name="viewModel"
            type="com.tmd.dictionary.screen.fragment.search.level2.viejav.VieJavViewModel"
            />

        <variable
            name="vieWord"
            type="com.tmd.dictionary.data.model.VieWord"
            />
    </data>

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/dp_5"
        app:cardBackgroundColor="@color/color_blue_grey_900_2"
        app:cardCornerRadius="@dimen/dp_5">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/border"
            android:onClick="@{()->viewModel.onItemClick(vieWord)}"
            android:orientation="vertical"
            android:padding="@dimen/dp_5"
            >

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="@dimen/dp_10"
                android:layout_marginStart="@dimen/dp_10"
                android:text="@{vieWord.origin}"
                android:textColor="@android:color/white"
                android:textSize="@dimen/sp_17"
                />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/dp_5"
                android:text="@{vieWord.definition}"
                android:textColor="@color/color_brown_100"
                android:textSize="@dimen/sp_15"/>

        </LinearLayout>

    </android.support.v7.widget.CardView>

</layout>
