<?xml version="1.0" encoding="utf-8"?>
<layout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    >

    <data>

        <variable
            name="viewModel"
            type="com.tmd.dictionary.screen.activity.boxs.BoxesViewModel"
            />

    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/colorPrimary"
        android:orientation="vertical"
        tools:context="com.tmd.dictionary.screen.activity.boxs.BoxesActivity"
        >

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_15"
            android:onClick="@{()->viewModel.onJpnBoxesClicked()}"
            android:text="@string/jpn_boxes"
            android:textColor="@android:color/white"
            android:textSize="@dimen/sp_20"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_15"
            android:onClick="@{()->viewModel.onVieBoxesClicked()}"
            android:text="@string/vie_boxes"
            android:textColor="@android:color/white"
            android:textSize="@dimen/sp_20"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_15"
            android:onClick="@{()->viewModel.onKanjiBoxesClicked()}"
            android:text="@string/kanji_boxes"
            android:textColor="@android:color/white"
            android:textSize="@dimen/sp_20"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_15"
            android:onClick="@{()->viewModel.onGrammarBoxesClicked()}"
            android:text="@string/grammar_boxes"
            android:textColor="@android:color/white"
            android:textSize="@dimen/sp_20"/>
    </LinearLayout>
</layout>
