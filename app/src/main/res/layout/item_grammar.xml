<?xml version="1.0" encoding="utf-8"?>
<layout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    >

    <data>

        <variable
            name="viewModel"
            type="com.tmd.dictionary.screen.OnClickSearchedItemListener"
            />

        <variable
            name="grammar"
            type="com.tmd.dictionary.data.model.Grammar"
            />
    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:onClick="@{()->viewModel.onClick(grammar)}"
        android:orientation="vertical"
        android:padding="@dimen/dp_5"
        >

        <com.tmd.dictionary.util.PaperTextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:includeFontPadding="false"
            android:lineSpacingExtra="@dimen/dp_15"
            android:paddingLeft="@dimen/dp_15"
            android:paddingStart="@dimen/dp_15"
            android:paddingTop="@dimen/dp_15"
            android:text="@{grammar.origin}"
            android:textColor="@android:color/black"
            android:textSize="20sp"
            android:textStyle="bold"
            app:linesColor="@color/color_line"
            app:linesPaddingLeft="@dimen/dp_20"
            app:linesPaddingRight="@dimen/dp_20"
            app:strokeWidth=".5dp"
            />

        <com.tmd.dictionary.util.PaperTextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:includeFontPadding="false"
            android:lineSpacingExtra="@dimen/dp_15"
            android:paddingLeft="@dimen/dp_25"
            android:paddingStart="@dimen/dp_25"
            android:paddingTop="@dimen/dp_15"
            android:text="@{grammar.definition}"
            android:textColor="@android:color/black"
            android:textSize="15sp"
            app:linesColor="@color/color_line"
            app:linesPaddingLeft="@dimen/dp_20"
            app:linesPaddingRight="@dimen/dp_20"
            app:strokeWidth=".5dp"
            />

        <com.tmd.dictionary.util.PaperTextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/split_lines"
            android:includeFontPadding="false"
            android:lineSpacingExtra="@dimen/dp_15"
            android:paddingTop="@dimen/dp_15"
            android:textSize="@dimen/sp_15"
            app:linesColor="@color/color_line"
            app:linesPaddingLeft="@dimen/dp_20"
            app:linesPaddingRight="@dimen/dp_20"
            app:strokeWidth=".5dp"
            />

    </LinearLayout>

</layout>
